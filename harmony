        const langSelector = document.getElementById('langSelector');
        const playBtn = document.getElementById('playBtn');
        const progress = document.getElementById('progress');
        let isPlaying = false;
        let progressValue = 0;

        langSelector.addEventListener('change', (e) => {
            const lang = e.target.value;
            const elements = document.querySelectorAll('[data-lang]');
            elements.forEach(el => {
                const key = el.getAttribute('data-lang');
                if (translations[lang] && translations[lang][key]) {
                    el.textContent = translations[lang][key];
                }
            });
        });

        playBtn.addEventListener('click', () => {
            isPlaying = !isPlaying;
            playBtn.textContent = isPlaying ? '‚è∏Ô∏è' : '‚ñ∂Ô∏è';
        });

        setInterval(() => {
            if (isPlaying) {
                progressValue += 0.5;
                if (progressValue > 100) progressValue = 0;
                progress.style.width = progressValue + '%';
            }
        }, 100);

        // Dynamic gradient colors
        const gradients = [
            'linear-gradient(45deg, #FF0080, #7928CA, #FF0080)',
            'linear-gradient(45deg, #00F260, #0575E6, #00F260)',
            'linear-gradient(45deg, #FF416C, #FF4B2B, #FF416C)',
            'linear-gradient(45deg, #4776E6, #8E54E9, #4776E6)',
            'linear-gradient(45deg, #000000, #434343, #000000)',
            'linear-gradient(45deg, #8E2DE2, #4A00E0, #8E2DE2)',
            'linear-gradient(45deg, #FFD700, #FFA500, #FFD700)',
            'linear-gradient(45deg, #FF00FF, #00FFFF, #FF00FF)'
        ];

        let currentGradient = 0;
        const bgElement = document.querySelector('.background-gradient');

        setInterval(() => {
            currentGradient = (currentGradient + 1) % gradients.length;
            bgElement.style.background = gradients[currentGradient];
        }, 10000);
    </script>
